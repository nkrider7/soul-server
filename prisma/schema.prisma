generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String     @id @default(uuid())
  email          String     @unique
  username       String     @default("player")
  lastActiveDate DateTime?  @default(now())
  character      Character?
  inventory      Item[]
  currencies     Currency?
  habits         Habit[]
  quests         Quest[]
  createdAt      DateTime   @default(now())
  level          Int        @default(1)
  xp             Int        @default(0)
  rank           Rank       @default(E)
  avatar         String?    @default("")
  stats          Json
  streak         Int        @default(0)
  maxStreak      Int        @default(0)
  Posts          Posts[]
}

enum Rank {
  E
  D
  C
  B
  A
  S
}

model Character {
  id        String   @id @default(uuid())
  name      String
  gender    String
  powers    String[]
  image     String?
  fullImage String?
  bgImage   String?
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @unique
}

model Quest {
  id          String @id @default(uuid())
  title       String
  description String
  progress    Int    @default(0)
  goal        Int
  status      String @default("pending")
  type        String
  createdBy   String @default("user") // or "system"
  user        User   @relation(fields: [userId], references: [id])
  userId      String
  checklist   Json?
  rewards     Json?
}

model Habit {
  id          String   @id @default(uuid())
  title       String
  description String?
  createdAt   DateTime @default(now())
  reminder    Json?
  subtasks    Json?
  user        User     @relation(fields: [userId], references: [id])
  userId      String
}

model Currency {
  id     String @id @default(uuid())
  coins  Int    @default(0)
  gems   Int    @default(0)
  user   User   @relation(fields: [userId], references: [id])
  userId String @unique
}

model Item {
  id           String  @id @default(uuid())
  name         String
  description  String
  type         String
  icon         String?
  price        Int?
  currencyType String? // coins/gems
  user         User    @relation(fields: [userId], references: [id])
  userId       String
}

model Posts {
  id        String   @id @default(uuid())
  title     String
  content   String
  image     String?
  likes     Int      @default(0)
  comments  Json?
  tags      String[]
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}
