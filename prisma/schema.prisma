generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  isVerified     Boolean  @default(false)
  posts          Int      @default(0)
  authToken      String
  Profile        Profile?
  Posts          Posts[]
  createdAt      DateTime @default(now())
  lastActiveDate DateTime @default(now())
}

model Profile {
  id          String     @id @default(uuid())
  fullname    String     @default("player")
  character   Character?
  dateOfBirth DateTime
  gender      Gender
  height      Int
  weight      Int
  level       Int        @default(1)
  xp          Int        @default(0)
  rank        Rank       @default(E)
  avatar      String?    @default("")
  stats       Json?      @default("{\"strength\": 1, \"intelligence\": 1, \"karma\": 1, \"stamina\": 1}")
  streak      Int        @default(0)
  maxStreak   Int        @default(0)
  inventory   Item[]
  currencies  Currency?  @relation(fields: [currencyId], references: [id])
  currencyId  String?
  habits      Habit[]
  quests      Quest[]
  user        User       @relation(fields: [userId], references: [id])
  userId      String     @unique
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum Rank {
  E
  D
  C
  B
  A
  S
}

model Character {
  id        String   @id @default(uuid())
  name      String
  gender    String
  powers    String[]
  image     String?
  fullImage String?
  bgImage   String?
  profile   Profile  @relation(fields: [profileId], references: [id])
  profileId String   @unique
}

model Quest {
  id          String   @id @default(uuid())
  title       String
  description String
  progress    Int      @default(0)
  goal        Int
  status      String   @default("pending")
  type        String
  checklist   Json?
  rewards     Json?
  Profile     Profile? @relation(fields: [profileId], references: [id])
  profileId   String?
  createdBy   String   @default("user")
}

model Habit {
  id          String   @id @default(uuid())
  title       String
  description String?
  createdAt   DateTime @default(now())
  reminder    Json?
  subtasks    Json?
  Profile     Profile? @relation(fields: [profileId], references: [id])
  profileId   String?
}

model Currency {
  id      String    @id @default(uuid())
  coins   Int       @default(0)
  gems    Int       @default(0)
  Profile Profile[]
}

model Item {
  id           String   @id @default(uuid())
  name         String
  description  String
  type         String
  icon         String?
  price        Int?
  currencyType String? // coins/gems
  Profile      Profile? @relation(fields: [profileId], references: [id])
  profileId    String?
}

model Posts {
  id        String   @id @default(uuid())
  title     String
  content   String
  image     String?
  likes     Int      @default(0)
  comments  Json?
  tags      String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User     @relation(fields: [userId], references: [id])
  userId    String
}
