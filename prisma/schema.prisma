generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POOL_DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum Rank {
  E
  D
  C
  B
  A
  S
}

enum Role {
  USER
  ADMIN
}

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  isVerified     Boolean  @default(false)
  posts          Int      @default(0)
  role           Role     @default(USER)
  Profile        Profile?
  Posts          Posts[]
  createdAt      DateTime @default(now())
  lastActiveDate DateTime @default(now())
}

model Profile {
  id          String      @id @default(uuid())
  fullname    String      @default("player")
  character   String?
  dateOfBirth DateTime
  gender      Gender
  height      Int
  weight      Int
  level       Int         @default(1)
  xp          Int         @default(0)
  rank        Rank        @default(E)
  avatar      String?     @default("")
  stats       Json?       @default("{\"strength\": 1, \"intelligence\": 1, \"karma\": 1, \"stamina\": 1}")
  streak      Int         @default(0)
  maxStreak   Int         @default(0)
  inventory   Item[]
  currencies  Currency?   @relation(fields: [currencyId], references: [id])
  currencyId  String?
  habits      Habit[]
  user        User        @relation(fields: [userId], references: [id])
  userId      String      @unique
  challenges  Challenge[]
}

model Character {
  id            String   @id @default(uuid())
  name          String
  title         String
  gender        Gender
  element       String?
  description   String?
  personality   String?
  backstory     String?
  powers        String[]
  image         String?
  fullImage     String?
  bgImage       String?
  animatedImage String?
  statsBoost    Json?
}

model Habit {
  id          String   @id @default(uuid())
  title       String
  description String?
  createdAt   DateTime @default(now())
  reminder    Json?
  subtasks    Json?
  Profile     Profile? @relation(fields: [profileId], references: [id])
  profileId   String?
}

model Currency {
  id      String    @id @default(uuid())
  coins   Int       @default(0)
  gems    Int       @default(0)
  Profile Profile[]
}

model Item {
  id           String   @id @default(uuid())
  name         String
  description  String
  type         String
  icon         String?
  price        Int?
  currencyType String? // coins/gems
  Profile      Profile? @relation(fields: [profileId], references: [id])
  profileId    String?
}

model Posts {
  id        String   @id @default(uuid())
  title     String
  content   String
  image     String?
  likes     Int      @default(0)
  comments  Json?
  tags      String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User     @relation(fields: [userId], references: [id])
  userId    String
}

model Challenge {
  id          String           @id @default(uuid())
  name        String
  description String
  category    String
  difficulty  String
  duration    Int
  start       DateTime
  end         DateTime
  status      String
  image       String?
  createdBy   String
  rewards     Json
  quests      ChallengeQuest[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  Profile     Profile?         @relation(fields: [profileId], references: [id])
  profileId   String?
}

model ChallengeQuest {
  id          String    @id @default(uuid())
  title       String
  description String
  currentDay  Int?
  totalDays   Int?
  start       DateTime
  end         DateTime
  repeat      REPEAT    @default(DAILY)
  type        String
  status      String    @default("in-progress")
  xpReward    Int?
  coinReward  Int?
  statReward  Json?
  challenge   Challenge @relation(fields: [challengeId], references: [id])
  challengeId String
}

enum REPEAT {
  DAILY
  ALTERNATE_DAYS
  WEEKDAYS
  WEEKENDS
  WEEKLY
}
